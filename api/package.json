    "seed:run": "ts-node node_modules/typeorm-seeding/dist/cli.js seed",
    "seed:drop": "NODE_ENV=test ts-node node_modules/typeorm/cli.js schema:drop",
    "seed:sync": "ts-node node_modules/typeorm/cli.js schema:sync"
